<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h1 class="text-center">Doctor Information</h1>
			 <p class="notice"><%= notice %></p>
          
		</div>
		  
           
      	<div class="col-lg-4 search-bar">
               <%= form_with(url: doctors_path, method: :get, local: true, class: 'search-form') do |form| %>
          <div class="input-group justify-content-center">
               <%= form.text_field :search, placeholder: "Search doctors", class: "form-control" %>
            <span class="input-group-btn">
                <%= form.submit "Search", class: "btn btn-primary" %>
            </span>
          </div>
          <% end %>
       </div>
       <div class="abc">
       	   <%=link_to 'New doctor',new_doctor_path, class:'btn btn-primary btn-lg' %>
       	 

       </div>
		
	</div>
	<table class="table-borderd table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Email</th>
				<th>Contect</th>
				<th>Address</th>
				<th>Specialization</th>
				<th>Eprince</th>
			</tr>
		</thead>
		<tbody>
			<% @doctors.each do |doctor| %>
			<tr>
				<td><%=doctor.id %></td>
				<td><%=doctor.Name %></td>
				<td><%=doctor.Email %></td>
				<td><%=doctor.ConectNo %></td>
				<td><%=doctor.Address%></td>
				<td><%=doctor.Specialization %></td>
				<td><%=doctor.Exprince_year%></td>
		        <td>
		        	<%=link_to "Edit", edit_doctor_path(doctor),class:'btn btn-info btn-lg' %>
		        	<%=link_to 'Show',doctor_path(doctor),class:'btn btn-primary btn-lg' %>
		        	<%= link_to 'Delete',doctor_path(doctor), data: { "turbo-method": :delete, confirm: 'Are you sure?' }, class: 'btn btn-info btn-lg' %>
		        	 <%= link_to "Prescriptions", doctor_prescriptions_path(@doctor), class: "btn btn-info btn-lg" %>


		        </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>


<style type="text/css">
	.table{
		
		position: relative;
		top:20px;
	}
	.abc{
		position: relative;
		top: 20px;
		padding: 35px;
	}
	.ab{
		align-content-left:10px ;
	}
	.search-bar{
		position: relative;
		left: 500px;
		top:20px;
	}
</style>







