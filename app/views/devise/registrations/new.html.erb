<div  class="body">
 <div class="col-lg-5">
   <div class="card" >
     <div  class="card-header">
       <h2 class="text-center">Sign up</h2>
      </div>
     <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

     <div class="form-group">
       <%= f.label :email %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control form-control-lg' %>
      </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:'form-control form-control-lg' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:'form-control form-control-lg'%>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up",class:'btn btn-lg' %>
    </div>
    <% end %>

     <%= render "devise/shared/links" %>
   </div>
  </div>
 </div>
</div>
<style type="text/css">
  .body{
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100;
  }
  .text-center{
    color: #fff;
    font: bold;
  }
  .card{
    
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #fff;
    margin: 10px;
  }
  .card-header{
    background-color: #ADD8E6;
    padding: 5px;
  }
  .btn{
    background-color: #ADD8E6;
  }
</style>