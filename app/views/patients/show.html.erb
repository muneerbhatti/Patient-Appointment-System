<div class="col-lg-12">
  <div class="card">
    <div class="card-body">
      <h1 class="text-center">Patient Detail</h1>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-bordered">
      <tbody>
      <tr>
        <th>ID</th>
        <td><%= @patient.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @patient.Name %></td>
      </tr>
      <tr>
        <th>CNIC</th>
        <td><%= @patient.CNIC %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @patient.email %></td>
      </tr>
      <tr>
        <th>Phone No</th>
        <td><%= @patient.PhoneNo %></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td><%= @patient.Gender %></td>
      </tr>
      <tr>
        <th>Date of Birth</th>
        <td><%= @patient.date_of_birth %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td><%= @patient.Address %></td>
      </tr>
      </tbody>
    </table>
  </div>
  <%= link_to 'Back to Patients', patients_path, class: 'btn btn-primary btn-lg' %>
  <%= link_to 'Edit Patient', edit_patient_path(@patient), class: 'btn btn-info btn-lg' %>
</div>
