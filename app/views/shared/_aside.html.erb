<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <img src="<%= image_url('user2-160x160.jpg') %>" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%=current_user.userable_type %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..." />
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>

    <% if current_user.userable_type == "Reception" %>
      <ul class="sidebar-menu">
        <li class="header">MAIN NAVIGATION</li>
        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Doctors</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= doctors_path %>"><i class="fa fa-circle-o"></i>Doctor(s)</a></li>
        </li>
        <li><a href="<%= new_doctor_path %>"><i class="fa fa-th"></i> <span>Doctor</span> <small class="label pull-right bg-green">new</small></a></li>

        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Patients</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= patients_path %>"><i class="fa fa-circle-o"></i>  Patient(s)</a></li>
            
          </ul>
        </li>
        <li><a href="<%= new_patient_path %>"><i class="fa fa-th"></i> <span>Patient</span> <small class="label pull-right bg-green">new</small></a></li>

        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Token</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= tokens_path %>"><i class="fa fa-circle-o"></i>Token(s)</a></li>
           
          </ul>
        </li>
        <li><a href="<%= new_token_path %>"><i class="fa fa-th"></i> <span>Token</span> <small class="label pull-right bg-green">new</small></a></li>
      </ul>

    <% elsif current_user.userable_type == "Doctor" %>
      <ul class="sidebar-menu">
        <li class="header">MAIN NAVIGATION</li>
        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Doctors</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= new_doctor_path %>"><i class="fa fa-circle-o"></i> New Doctor</a></li>
            <li><a href="<%= doctors_path %>"><i class="fa fa-circle-o"></i> Doctor(s)</a></li>
          </ul>
        </li>
        <li><a href="<%= new_doctor_path %>"><i class="fa fa-th"></i> <span>Doctor</span> <small class="label pull-right bg-green">new</small></a></li>
      </ul>

    <% elsif current_user.userable_type == "Patient" %>
      <ul class="sidebar-menu">
        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Patients</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= new_patient_path %>"><i class="fa fa-circle-o"></i> New Patient</a></li>
            <li><a href="<%= patients_path %>"><i class="fa fa-circle-o"></i> Patient(s)</a></li>
          </ul>
        </li>
        <li><a href="<%= new_patient_path %>"><i class="fa fa-th"></i> <span>Patient</span> <small class="label pull-right bg-green">new</small></a></li>

        <li class="active treeview">
          <a href="#"><i class="fa fa-dashboard"></i> <span>Token</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <li class="active"><a href="<%= new_token_path %>"><i class="fa fa-circle-o"></i> New Token</a></li>
            <li><a href="<%= tokens_path %>"><i class="fa fa-circle-o"></i> Token(s)</a></li>
          </ul>
        </li>
        <li><a href="<%= new_token_path %>"><i class="fa fa-th"></i> <span>Token</span> <small class="label pull-right bg-green">new</small></a></li>
      </ul>
    <% end %>
  </section>
</aside>
